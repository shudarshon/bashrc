#Bitbucket Directory
alias cbb="cd ~/bitbucket"

#Keyfile Directory
alias cdk="cd ~/devops/keyfile/"

#Github Directory
alias cdg="cd ~/github/"

#Dropbox Directory
alias cdd="cd ~/Dropbox"

#Bashrc Config Directory
alias cds="cd ~/.shells"

#Update OS
alias update="sudo apt-get update"

#Shutdown OS
alias qq="sudo shutdown -h now"

# Clear terminal
alias c="clear"

# Cute shell shortcuts
alias ll='ls -lah'
alias l="ll"

# Enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# Remove regardless of regular or directory file
alias rm='rimraf'

# Git Commands
alias gpom='git push origin master'
alias gcom="git commit"
alias gad="git add"
alias gps="git push"
alias gpl='git pull'
alias gst='git status'
alias gdf='git diff'
alias grf='git reflog'
alias glf='git ls-files'

# Quickly load bashrc$
alias gg='source ~/.bashrc'

# Autoremove and Autoclean unused packages from the system
alias clean="sudo apt-get autoremove && sudo apt-get autoclean"

# Tail files
alias tf="tail -f"

#List open ports and services using the ports
alias op="sudo lsof -iTCP -sTCP:LISTEN -P"

#Netstat
alias netstat="netstat -plntu"
