#Keyfile Directory
alias cdk="cd ~/Dropbox/development/devops/keyfile/"

#Github Directory
alias cdg="cd ~/github/"

#Update OS
alias update="sudo apt-get update"

# Clear terminal
alias c="clear"

# Cute shell shortcuts
alias ll='ls -lah'
alias l="ll"

# Enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# Some more, to avoid mistakes
alias rm='rimraf'

# Git Commands
alias gpom='git push origin master'
alias commit="git commit"
alias add="git add"
alias push="git push"
alias pull='git pull'
alias gst='git status'
alias gd='git diff'
alias gr='git reflog'
alias glf='git ls-files'

# Quickly load bashrc$
alias gg='source ~/.bashrc'

# Autoremove and Autoclean unused packages from the system
alias clean="sudo apt-get autoremove && sudo apt-get autoclean"

# Tail files
alias tf="tail -f"

#List open ports and services using the ports
alias op="sudo lsof -iTCP -sTCP:LISTEN -P"

#Netstat
alias netstat="netstat -plntu"
